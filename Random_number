// 1(A) storing 10 random three digit number ////
var arr=[];

for (var i=0;i<10;i++){
    arr[i]=Math.floor(Math.random()*999+100);
}

// 1(B) store the generated in array ///////
console.log("the number are as follow : ------")
for (var j=0;j<arr.length;j++){
    console.log(arr[j]);
}



// 1(C) determining second largest and smallest number ///
console.log("the second smallest no = " +arr[2]);
console.log("the second largest no = " +arr[8]);

